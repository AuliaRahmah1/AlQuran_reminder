<% if @surat.errors.present? %>
	<ul>
		<% @surat.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @surat, html: { multipart: true } do |f| %>
	<table>
		<tr>
			<td>Title</td>
			<td>:</td>
			<td></td>
			<td><%= f.text_field :title %></td>
		</tr>

		<tr>
			<td>Title</td>
			<td>:</td>
			<td></td>
			<td><%= f.file_field :mp3file %></td>
		</tr>

		<tr>
			<td colspan='3'><%= f.submit %>
		</tr>

	</table>
<% end %>