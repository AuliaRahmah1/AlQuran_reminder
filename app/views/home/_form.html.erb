			<td></br>
				<%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Email", style: 'margin-bottom:0px' %>
				
					<div class="checkbox">
						<label>
							<div class="color-log">
								<input type="checkbox"> Remember me
	     		  	</div>
	     		  </label>
     		  </div>
					
			</td>
